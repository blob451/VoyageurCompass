# Django Settings
# Generate a new SECRET_KEY with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_SECRET_KEY
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
# Production environments must set secure database credentials
DB_NAME=voyageur_compass_db
DB_USER=voyageur_user
DB_PASSWORD=CHANGE_ME_SECURE_DATABASE_PASSWORD
DB_HOST=localhost
DB_PORT=5432

# Test Database (optional - will use main DB if not set)
TEST_DB_PASSWORD=CHANGE_ME_TEST_DATABASE_PASSWORD

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Settings (for frontend)
# In production, replace with actual frontend domain(s)
# Development origins handled automatically when DEBUG=True
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Yahoo Finance API
YAHOO_FINANCE_API_TIMEOUT=30